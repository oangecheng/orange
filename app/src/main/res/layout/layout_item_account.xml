<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="100dp"
  android:layout_margin="10dp"
  android:background="@color/white_common"
  android:orientation="vertical">

  <LinearLayout
    android:id="@+id/account_linear"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:layout_marginStart="15dp"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
      android:id="@+id/account_image"
      android:layout_width="50dp"
      android:layout_height="50dp"/>

    <TextView
      android:id="@+id/account_website"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:ellipsize="end"
      android:maxWidth="50dp"
      android:paddingTop="@dimen/margin_5"
      android:singleLine="true" />
  </LinearLayout>

  <TextView
    android:id="@+id/account_pwd"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:layout_marginEnd="15dp"
    android:layout_marginStart="20dp"
    android:layout_toEndOf="@+id/account_linear"
    android:ellipsize="end"
    android:maxLines="1"
    android:textSize="16sp" />

  <TextView
    android:id="@+id/account_username"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_above="@+id/account_pwd"
    android:layout_centerVertical="true"
    android:layout_marginBottom="8dp"
    android:layout_marginEnd="15dp"
    android:layout_marginStart="20dp"
    android:layout_toEndOf="@+id/account_linear"
    android:ellipsize="end"
    android:maxLines="1"
    android:textSize="16sp" />

  <TextView
    android:id="@+id/account_time"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/account_pwd"
    android:layout_centerVertical="true"
    android:layout_marginEnd="15dp"
    android:layout_marginStart="20dp"
    android:layout_marginTop="8dp"
    android:layout_toEndOf="@+id/account_linear"
    android:ellipsize="end"
    android:maxLines="1"
    android:textSize="16sp" />


</RelativeLayout>
